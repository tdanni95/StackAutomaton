<div class="automatonRules">
    @if (Rules is not null && Rules.GetLength(0) > 0)
    {
        <div class="scroll-table">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        @foreach (var item in Rules[0])
                        {
                            <th>@item</th>

                        }
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 1; i < Rules.GetLength(0); i++)
                    {
                        <tr>
                            @for (int j = 0; j < Rules[i].Length; j++)
                            {
                                <td>@Rules[i][j]</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="d-flex align-content-center">
            <div>
                <h1>Please import a valid CSV file</h1>
            </div>
        </div>
    }
</div>
@code {
    [Parameter] public string[][] Rules { get; set; }
}
